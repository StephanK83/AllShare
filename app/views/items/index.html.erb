  <div class="checkout-all-our-items">
    <h2>See all our items</h2>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-3">
        <div class="card">
          <%= link_to item_path(item) do %>
            <% if item.picture%>
              <%= image_tag item.picture, class: "item-card-img" %>
            <% else %>
              <% item.photos.each do |photo| %>
                <%= cl_image_tag photo.key, class: "item-card-img" %>
              <% end %>
            <% end %>
            <%= link_to toggle_favorite_item_path(item),
                        class: "favorite-item-link",
                        data: {turbo_method: :post},
                        remote: true do %>
              <% if current_user.favorited?(item) %>
                <i class="fas fa-heart"></i>
              <% else %>
                <i class="fas fa-heart-o" aria-hidden="false"></i>
              <% end %>
            <% end %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to item.name, item_path(item) %></h5>
            <p class="card-text"><%= item.category %></p>
          </div>
        </div>
      </div>
<% end %>
  </div>
</div>

  <div class="list-an-item">
    <h2>Want to list an item?</h2>
    <button type="button" class="btn btn-primary">
      <%= link_to "List an item", new_item_path, class: "list-item-link" %>
    </button>
  </div>
</div>

<style>
  .card {
    position: relative;
  }

  .favorite-item-link {
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 1;
    color: red;
  }
  </style>
