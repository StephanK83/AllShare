<div class="container-grid">
  <div class="checkout-all-our-items">
    <h2>Check out all our items</h2>
    <%= render "shared/search_form", style: "max-width: 400px;" %>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-3">
        <div class="card">
          <%= link_to item_path(item) do %>
            <% if item.picture%> <%# this allow us to manage the picture that come from seeds %>
              <%= image_tag item.picture, class: "item-card-img" %>
            <% else %>
              <% item.photos.each do |photo| %> <%# this allow us to manage the photos that the user upload %>
                <%= cl_image_tag photo.key, class: "item-card-img" %>
              <% end %>
            <% end %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to item.name, item_path(item) %></h5>
            <p class="card-text"><%= item.category %></p>
            <%= link_to current_user.favorited?(item) ? "Unlike" : "Like",
              toggle_favorite_item_path(item),
              class: "btn btn-primary",
              data: {turbo_method: :post},
              remote: true %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

  <div class="list-an-item">
    <h2>Want to list an item?</h2>
    <button type="button" class="btn btn-primary">
      <%= link_to "List an item", new_item_path, class: "list-item-link" %>
    </button>
  </div>
</div>
