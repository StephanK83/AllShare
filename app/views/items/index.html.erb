  <div class="container-grid">
    <div class="checkout-all-our-items">
      <div class="list-an-item">
        <h2>See all our items or list a new one</h2>
        <button type="button" class="btn btn-primary">
          <%= link_to "List an item", new_item_path, class: "list-item-link" %>
        </button>
      </div>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-sm-3">
            <%= link_to item_path(item) do %>
              <div class="card">
                <%= cl_image_tag item.photos.first.key, class: "item-card-img" %>
                <div class="card-body">
                  <h5 class="card-title"><%= item.name %></h5>
                  <p class="card-text"><%= item.category %></p>
                </div>
                  <%= link_to toggle_favorite_item_path(item),
                            class: "favorite-item-link",
                            data: {turbo_method: :post} do %>
                  <% if current_user.favorited?(item) %>
                    <i class="fas fa-heart"></i>
                  <% else %>
                    <i class="far fa-heart" aria-hidden="false"></i>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
