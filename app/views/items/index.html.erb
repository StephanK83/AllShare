<div class="container-grid">
  <div class="checkout-all-our-items">
    <h2>Check out all our items</h2>
    <%= render "shared/search_form", style: "max-width: 400px;" %>
  </div>
  <div class="row">
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <div class="card">
        <%= link_to item_path(item) do %>
          <%= image_tag item.picture, class: "card-img-top", style: "height: 150px; object-fit: cover;" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to item.name, item_path(item) %></h5>
          <p class="card-text"><%= item.category %></p>
          <%= link_to current_user.favorited?(item) ? "Unlike" : "Like",
            toggle_favorite_item_path(item),
            class: "btn btn-primary",
            data: {turbo_method: :post},
            remote: true %>
        </div>
      </div>
    </div>
  <% end %>
</div>

  <div class="list-an-item">
    <h2>Want to list an item?</h2>
    <button type="button" class="btn btn-primary">
      <%= link_to "List an item", new_item_path, class: "list-item-link" %>
    </button>
  </div>
</div>

<style>
.items-index {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.card-title {
font-size: 18px;
  margin: 10px 0;
}

.card-text {
font-size: 14px;
  margin: 10px 0;
}


.like-button {
  position: absolute;
  top: 10px;
  right: 10px;
}
</style>
