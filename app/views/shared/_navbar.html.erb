<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="background-color: black; z-index: 1;">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

    <div class="search-bar" style="transform: translateX(200px); display: flex; align-items: center;">
      <div class="col-12 col-sm-6 col-md-6 search-form-container">
        <%= render "shared/search_form" %>
      </div>
    </div>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent" style="z-index: 999;">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "How it works", how_it_works_path, class: "nav-link", style: "color: white;" %>
          </li>
          <li class="nav-item">
            <%= link_to "Messages", "/chatrooms/1", class: "nav-link", style: "color: white;" %>
          </li>
          </li>
          <li class="nav-item dropdown" >
            <a class="nav-link" href="#" data-bs-toggle="dropdown"><%= current_user.first_name %></a>
            <%# <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My bookings", bookings_path, class: "dropdown-item", style: "color: black;" %>
              <%= link_to "My items", my_items_items_path, class: "dropdown-item", style: "color: black;" %>
              <%= link_to "My favourite items", my_favorite_items_items_path, class: "dropdown-item", style: "color: black;" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item", style: "color: black;" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path,  class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<style>
  .dropdown-menu {
    background-color: #F5F5F5;
  }
</style>
